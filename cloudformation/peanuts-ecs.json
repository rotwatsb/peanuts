{
    "Parameters": {
        "VpcId" : {
            "Type" : "AWS::EC2::VPC::Id",
            "Description":"Select a VPC that allows instances to access the Internet."
        },
        "AllowedSSHCidr" : {
            "Type" : "String",
            "Description" : "Enter the IP/32 that will be allowed ssh access :"
        },
        "PublicSubnetIds" : {
            "Type" : "List<AWS::EC2::Subnet::Id>",
            "Description" : "Select at least two subnets in your selected VPC."
        },
        "PrivateSubnetIds" : {
            "Type" : "List<AWS::EC2::Subnet::Id>",
            "Description" : "Select at least two subnets in your selected VPC."
        },
        "PrivateDnsNamespaceId" : {
            "Type" : "String"
        },
        "ECSClusterName" : {
            "Type" : "String"
        },
        "CloudwatchLogsGroupName" : {
            "Type" : "String"
        }
    },
    "Resources" : {
        "peanutsAppSecurityGroup" : {
            "Type" : "AWS::EC2::SecurityGroup",
            "Properties" : {
                "GroupDescription" : "Allow http and ssh from bastion",
                "VpcId" : {
                    "Ref" : "VpcId"
                },
                "SecurityGroupIngress" : [
                    {
                        "IpProtocol" : "tcp",
                        "FromPort" : 22,
                        "ToPort" : 22,
                        "CidrIp" : { "Ref" : "AllowedSSHCidr" }
                    },
                    {
                        "IpProtocol" : "tcp",
                        "FromPort" : 5000,
                        "ToPort" : 5000,
                        "CidrIp" : "0.0.0.0/0"
                    },
                    {
                        "IpProtocol" : "tcp",
                        "FromPort" : 5000,
                        "ToPort" : 5000,
                        "CidrIpv6" : "::/0"
                    }
                ]
            }
        },
        "peanutsALBSecurityGroup" : {
            "Type" : "AWS::EC2::SecurityGroup",
            "Properties" : {
                "GroupDescription" : "Allow http connections",
                "VpcId" : {
                    "Ref" : "VpcId"
                },
                "SecurityGroupIngress" : [
                    {
                        "IpProtocol" : "tcp",
                        "FromPort" : 80,
                        "ToPort" : 80,
                        "CidrIp" : "0.0.0.0/0"
                    },
                    {
                        "IpProtocol" : "tcp",
                        "FromPort" : 80,
                        "ToPort" : 80,
                        "CidrIpv6" : "::/0"
                    }
                ]
            }
        },
        "peanutsContainerInstances" : {
            "Type" : "AWS::AutoScaling::LaunchConfiguration",
            "Properties" : {
                "ImageId" : "ami-0fbc9fff39b859770",
                "SecurityGroups" : [
                    {
                        "Ref" : "peanutsAppSecurityGroup"
                    }
                ],
                "InstanceType" : "t2.micro",
                "IamInstanceProfile": "arn:aws:iam::139008324031:instance-profile/role-ecs-instance-peanuts",
                "EbsOptimized" : false,
                "KeyName" : "rotwatsb-key-pair-useast2",
                "AssociatePublicIpAddress" : false,
                "BlockDeviceMappings" : [
                    {
                        "DeviceName" : "/dev/xvda",
                        "Ebs" : {
                            "DeleteOnTermination" : true,
                            "SnapshotId" : "snap-02f7e7dc045b9fc1f",
                            "VolumeSize" : 30,
                            "VolumeType" : "gp2"
                        }
                    }
                ],
                "UserData": {
                    "Fn::Base64":{
                        "Fn::Join":[
                            "",
                            [
                                "#!/bin/bash -xe\n",
                                "echo ECS_CLUSTER=",
                                {
                                    "Ref" : "ECSClusterName"
                                },
                                " >> /etc/ecs/ecs.config\n",
                                "yum install -y aws-cfn-bootstrap\n",
                                "/opt/aws/bin/cfn-signal -e $? ",
                                "         --stack ",
                                {
                                    "Ref" : "AWS::StackName"
                                },
                                "         --resource peanutsECSAutoScalingGroup ",
                                "         --region us-east-2\n",
                            ]
                        ]
                    }
                }
            }
        },
        "peanutsECSAutoScalingGroup" : {
            "Type" : "AWS::AutoScaling::AutoScalingGroup",
            "Properties" : {
                "VPCZoneIdentifier": {
                    "Ref" : "PrivateSubnetIds"
                },
                "LaunchConfigurationName" : {
                    "Ref" : "peanutsContainerInstances"
                },
                "MinSize" : "1",
                "MaxSize" : "1",
                "DesiredCapacity" : "1"
            },
            "CreationPolicy" : {
                "ResourceSignal" : {
                    "Timeout" : "PT15M"
                }
            },
            "UpdatePolicy" : {
                "AutoScalingReplacingUpdate" : {
                    "WillReplace" : "true"
                }
            }
        },
        "peanutsTaskDefinition" : {
            "Type" : "AWS::ECS::TaskDefinition",
            "Properties" : {
                "ExecutionRoleArn" : "arn:aws:iam::139008324031:role/role-task-execution-peanuts",
                "NetworkMode" : "awsvpc",
                "TaskRoleArn":  "arn:aws:iam::139008324031:role/role-task-peanuts",
                "ContainerDefinitions" : [
                    {
                        "Name" : "peanutsApp",
                        "Image" : "rotwatsb/peanuts",
                        "Cpu" : 0,
                        "MemoryReservation" : 300,
                        "Essential" : true,
                        "LogConfiguration" : {
                            "LogDriver" : "awslogs",
                            "Options" : {
                                "awslogs-group" : {
                                    "Ref" : "CloudwatchLogsGroupName"
                                },
                                "awslogs-region" : "us-east-2",
                                "awslogs-stream-prefix" : "peanuts-app"
                            }
                        },
                        "ReadonlyRootFilesystem" : false,
                        "Environment" : [
                            {
                                "Name" : "FLASK_APP",
                                "Value" : "peanuts"
                            }
                        ],
                        "Secrets" : [
                            {
                                "Name" : "RPC_PASSWORD",
                                "ValueFrom" : "arn:aws:ssm:us-east-2:139008324031:parameter/BITCOIN_RPC_PW"
                            },
                            {
                                "Name" : "RPC_USER",
                                "ValueFrom" : "arn:aws:ssm:us-east-2:139008324031:parameter/BITCOIN_RPC_USER"
                            }
                        ],
                        "PortMappings" : [
                            {
                                "ContainerPort" : 5000,
                                "HostPort" : 5000,
                                "Protocol" : "tcp"
                            }
                        ]
                    }
                ]
            }
        },
        "peanutsALB" : {
            "Type" : "AWS::ElasticLoadBalancingV2::LoadBalancer",
            "Properties" : {
                "Name" : "peanuts-alb",
                "Scheme" : "internet-facing",
                "LoadBalancerAttributes" : [
                    {
                        "Key" : "idle_timeout.timeout_seconds",
                        "Value" : "30"
                    }
                ],
                "Subnets" : {
                    "Ref" : "PublicSubnetIds"
                },
                "SecurityGroups" : [
                    {
                        "Ref" : "peanutsALBSecurityGroup"
                    }
                ],
                "Type" : "application"
            }
        },
        "peanutsTargetGroup" : {
            "Type" : "AWS::ElasticLoadBalancingV2::TargetGroup",
            "DependsOn" : "peanutsALB",
            "Properties" : {
                "TargetType" : "ip",
                "HealthCheckIntervalSeconds" : 10,
                "HealthCheckPath" : "/hello",
                "HealthCheckProtocol" : "HTTP",
                "HealthCheckTimeoutSeconds" : 5,
                "HealthyThresholdCount" : 2,
                "Name" : "peanutsTargetGroup",
                "Port" : 5000,
                "Protocol" : "HTTP",
                "UnhealthyThresholdCount" : 2,
                "VpcId" : {
                    "Ref" : "VpcId"
                }
            },
        },
        "peanutsALBListener" : {
            "Type" : "AWS::ElasticLoadBalancingV2::Listener",
            "Properties" : {
                "DefaultActions" : [
                    {
                        "Type" : "forward",
                        "TargetGroupArn" : {
                            "Ref" : "peanutsTargetGroup"
                        }
                    }
                ],
                "LoadBalancerArn" : {
                    "Ref" : "peanutsALB"
                },
                "Port" : "80",
                "Protocol" : "HTTP"
            }
        },
        "peanutsServiceDiscoveryService" : {
            "Type" : "AWS::ServiceDiscovery::Service",
            "Properties" : {
                "Description" : "Private peanuts app discovery service",
                "DnsConfig" : {
                    "DnsRecords" : [
                        {
                            "Type" : "A",
                            "TTL" : 60
                        }
                    ],
                    "RoutingPolicy" : "WEIGHTED"
                },
                "Name" : "peanuts",
                "NamespaceId" : {
                    "Ref" : "PrivateDnsNamespaceId"
                }
            }
        },
        "peanutsECSService" : {
            "Type" : "AWS::ECS::Service",
            "DependsOn" : "peanutsALBListener",
            "Properties" : {
                "Cluster" : {
                    "Ref" : "ECSClusterName"
                },
                "TaskDefinition" : {
                    "Ref" : "peanutsTaskDefinition"
                },
                "DesiredCount" : 1,
                "LaunchType" : "EC2",
                "HealthCheckGracePeriodSeconds" : 5,
                "LoadBalancers" : [
                    {
                        "ContainerName" : "peanutsApp",
                        "ContainerPort" : 5000,
                        "TargetGroupArn" : {
                            "Ref" : "peanutsTargetGroup"
                        }
                    }
                ],
                "NetworkConfiguration" : {
                    "AwsvpcConfiguration" : {
                        "Subnets" : {
                            "Ref" : "PrivateSubnetIds"
                        },
                        "SecurityGroups" : [
                            {
                                "Ref" : "peanutsAppSecurityGroup"
                            }
                        ]
                    }
                },
                "ServiceRegistries" : [
                    {
                        "RegistryArn" : {
                            "Fn::GetAtt" : [
                                "peanutsServiceDiscoveryService",
                                "Arn"
                            ]
                        }
                    }
                ]
            }
        },
        "peanutsAutoscalingRole" : {
            "Type" : "AWS::IAM::Role",
            "Properties" : {
                "AssumeRolePolicyDocument" : {
                    "Statement" : [
                        {
                            "Effect" : "Allow",
                            "Principal" : {
                                "Service" : [
                                    "application-autoscaling.amazonaws.com"
                                ]
                            },
                            "Action" : [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path" : "/",
                "Policies" : [
                    {
                        "PolicyName" : "service-autoscaling",
                        "PolicyDocument" : {
                            "Statement" : [
                                {
                                    "Effect" : "Allow",
                                    "Action" : [
                                        "application-autoscaling:*",
                                        "cloudwatch:DescribeAlarms",
                                        "cloudwatch:PutMetricAlarm",
                                        "ecs:DescribeServices",
                                        "ecs:UpdateService"
                                    ],
                                    "Resource" : "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "peanutsServiceScalingTarget" : {
            "Type" : "AWS::ApplicationAutoScaling::ScalableTarget",
            "DependsOn" : "peanutsECSService",
            "Properties" : {
                "MaxCapacity" : 2,
                "MinCapacity" : 1,
                "ResourceId" : {
                    "Fn::Join" : [
                        "",
                        [
                            "service/",
                            {
                                "Ref" : "ECSClusterName"
                            },
                            "/",
                            {
                                "Fn::GetAtt" : [
                                    "peanutsECSService",
                                    "Name"
                                ]
                            }
                        ]
                    ]
                },
                "RoleARN" : {
                    "Fn::GetAtt" : [
                        "peanutsAutoscalingRole",
                        "Arn"
                    ]
                },
                "ScalableDimension" : "ecs:service:DesiredCount",
                "ServiceNamespace" : "ecs"
            }
        }
    }
}
